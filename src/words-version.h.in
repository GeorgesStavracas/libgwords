#ifndef WORDS_VERSION_H
#define WORDS_VERSION_H

#if !defined(WORDS_INSIDE) && !defined(WORDS_COMPILATION)
# error "Only <words.h> can be included directly."
#endif

/**
 * SECTION:words-version
 * @short_description: words version checking
 *
 * words provides macros to check the version of the library
 * at compile-time
 */

/**
 * WORDS_MAJOR_VERSION:
 *
 * words major version component (e.g. 1 if %WORDS_VERSION is 1.2.3)
 */
#define WORDS_MAJOR_VERSION (@MAJOR_VERSION@)

/**
 * WORDS_MINOR_VERSION:
 *
 * words minor version component (e.g. 2 if %WORDS_VERSION is 1.2.3)
 */
#define WORDS_MINOR_VERSION (@MINOR_VERSION@)

/**
 * WORDS_MICRO_VERSION:
 *
 * words micro version component (e.g. 3 if %WORDS_VERSION is 1.2.3)
 */
#define WORDS_MICRO_VERSION (@MICRO_VERSION@)

/**
 * WORDS_VERSION
 *
 * words version.
 */
#define WORDS_VERSION (@VERSION@)

/**
 * WORDS_VERSION_S:
 *
 * words version, encoded as a string, useful for printing and
 * concatenation.
 */
#define WORDS_VERSION_S "@VERSION@"

#define WORDS_ENCODE_VERSION(major,minor,micro) \
        ((major) << 24 | (minor) << 16 | (micro) << 8)

/**
 * WORDS_VERSION_HEX:
 *
 * words version, encoded as an hexadecimal number, useful for
 * integer comparisons.
 */
#define WORDS_VERSION_HEX \
        (WORDS_ENCODE_VERSION (WORDS_MAJOR_VERSION, WORDS_MINOR_VERSION, WORDS_MICRO_VERSION))

/**
 * WORDS_CHECK_VERSION:
 * @major: required major version
 * @minor: required minor version
 * @micro: required micro version
 *
 * Compile-time version checking. Evaluates to %TRUE if the version
 * of words is greater than the required one.
 */
#define WORDS_CHECK_VERSION(major,minor,micro)   \
        (WORDS_MAJOR_VERSION > (major) || \
         (WORDS_MAJOR_VERSION == (major) && WORDS_MINOR_VERSION > (minor)) || \
         (WORDS_MAJOR_VERSION == (major) && WORDS_MINOR_VERSION == (minor) && \
          WORDS_MICRO_VERSION >= (micro)))

#endif /* WORDS_VERSION_H */
